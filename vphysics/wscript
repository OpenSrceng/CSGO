#!/usr/bin/env python

def options(opt):
	pass

def configure(conf):
	conf.define('BT_THREADSAFE',1)

def build(bld):
	SRCS = bld.path.ant_glob('*.cpp')
	SRCS += ['../public/tier0/memoverride.cpp']

	INCS = [
		'../bullet'
	]

	LIBS = [
		'tier0',
		'tier1',
		'tier2',
		'tier3',
		'interfaces',
		'vstdlib',
		'mathlib',
		'BulletSoftBody',
		'BulletDynamics',
		'BulletCollision',
		'LinearMath'
	]


	bld.shlib(target = 'vphysics',
		features = 'cxx',
		source = SRCS,
		includes = INCS,
		use = LIBS,
		install_path = bld.env.LIBDIR,
		subsystem = bld.env.MSVC_SUBSYSTEM)
